<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat Rooms</title>
</head>
<body>
    <h1>List of Chat Rooms</h1>
    <% if (chatRooms.length > 0) { %>
        <table border="1">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Room Name</th>
                    <th>Participants</th>
                </tr>
            </thead>
            <tbody>
                <% chatRooms.forEach((room, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= room.roomName %></td>
                        <td>
                            <% room.participants.forEach(participant => { %>
                                <div><%= participant.username %> (<%= participant.email %>)</div>
                            <% }); %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No chat rooms available.</p>
    <% } %>
</body>
</html>
